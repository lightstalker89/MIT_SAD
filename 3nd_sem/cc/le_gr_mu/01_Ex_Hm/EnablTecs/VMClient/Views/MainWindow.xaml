<Window x:Class="VirtualMachineClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding Source={StaticResource Locator}, Path=Main}"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Menu Height="20" VerticalAlignment="Top" Background="#FFA0A3B4">
            <MenuItem Header="File">
                <MenuItem Header="Upload New Virtual Machine" Command="{Binding UploadNewVm}"></MenuItem>
                <MenuItem Header="Upload New Appliance"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Exit"></MenuItem>
            </MenuItem>
            <MenuItem Header="Help"></MenuItem>
        </Menu>
        <TextBox Margin="10,57,0,0" Height="30" Width="385" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
        <Button  Margin="10,57,10,0" Height="30" Width="100" VerticalAlignment="Top" HorizontalAlignment="Right" Content="Search"></Button>
        <ListBox Margin="10,90,10,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid></Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Label Content="Virtual Machines" Margin="10,25,10,0" VerticalAlignment="Top" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center"/>
    </Grid>
</Window>
