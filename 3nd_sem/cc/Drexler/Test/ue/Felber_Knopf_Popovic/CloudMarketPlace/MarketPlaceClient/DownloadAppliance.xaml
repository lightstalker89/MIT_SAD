<Window x:Class="MarketPlaceClient.DownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DownloadWindow" Height="120" Width="537">
    <Grid>
        <Label Content="Download to:" HorizontalAlignment="Left" Margin="5,11,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="91,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="348" x:Name="txtFileDialog" IsEnabled="False"/>
        <Button x:Name="btnFileDialog" Content="Select" HorizontalAlignment="Left" Margin="444,17,0,0" VerticalAlignment="Top" Width="75" Click="btnFileDialog_Click"/>
        <Button x:Name="btnDownload" Content="Download" HorizontalAlignment="Left" Margin="444,59,0,0" VerticalAlignment="Top" Width="75" Click="btnDownload_Click"/>

    </Grid>
</Window>
