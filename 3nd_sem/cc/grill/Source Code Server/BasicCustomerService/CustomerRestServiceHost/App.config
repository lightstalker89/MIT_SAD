<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.serviceModel>
    <behaviors>
      <serviceBehaviors>
        <behavior name="Behavior1">
          <serviceMetadata httpGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="true"/>
        </behavior>
      </serviceBehaviors>
      <endpointBehaviors>
        <behavior name="web">
          <webHttp/>
        </behavior>
      </endpointBehaviors>
    </behaviors>
    <serviceHostingEnvironment multipleSiteBindingsEnabled="true" />
    <services>
      <service behaviorConfiguration="Behavior1" name="BasicCustomerRestService.CustomerService">
        <endpoint
          address=""
          bindingConfiguration=""
          binding="webHttpBinding"
          contract="BasicCustomerRestServiceInterfaces.ICustomerService" />
        <host>
          <baseAddresses>
            <add baseAddress="http://*:8280" />
          </baseAddresses>
        </host>
      </service>
    </services>
  </system.serviceModel>
</configuration>