<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.serviceModel>
    <behaviors>
      <serviceBehaviors>
        <behavior name="Behavior1">
          <serviceMetadata httpGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <serviceHostingEnvironment multipleSiteBindingsEnabled="true" />
    <services>
      <service behaviorConfiguration="Behavior1" name="BasicCustomerService.CustomerService">
        <endpoint
          address=""
          bindingConfiguration=""
          binding="basicHttpBinding"
          bindingNamespace="http://grill.com/webservices/"
          contract="BasicCustomerServiceInterfaces.ICustomerService" />
        <host>
          <baseAddresses>
            <add baseAddress="http://*:8180/customerservice" />
          </baseAddresses>
        </host>
      </service>
    </services>
  </system.serviceModel>
</configuration>
