<Window x:Class="DIIoCApplication.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=MainViewModel}"
        Title="Dependency Injection and Inversion of Control" Height="350" Width="525">
    <Grid>
        <Button Command="{Binding StartLoggingCommand }" Content="{Binding StartLoggingButtonCaption}" HorizontalAlignment="Left" Margin="10,13,0,0" VerticalAlignment="Top" Width="153"/>
        <Button Command="{Binding InjectConsoleLoggerCommand}" Content="Inject Console Logger" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Width="153"/>
        <Button Command="{Binding InjectFileLoggerCommand}" Content="Inject File Logger" HorizontalAlignment="Left" Margin="10,67,0,0" VerticalAlignment="Top" Width="153"/>
        <Button Command="{Binding InjectEventLoggerCommand}"  Content="Inject Event Logger" HorizontalAlignment="Left" Margin="10,94,0,0" VerticalAlignment="Top" Width="153"/>
        <ListBox Margin="180,13,10,9" ItemsSource="{ Binding LoggerChanges, Mode=TwoWay}" />
        <GroupBox Header="Infos" HorizontalAlignment="Left" Margin="10,119,0,10" Width="153"/>

    </Grid>
</Window>
