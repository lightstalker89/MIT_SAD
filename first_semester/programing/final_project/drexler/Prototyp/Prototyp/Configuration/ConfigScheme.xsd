<?xml version="1.0" encoding="utf-8"?>
<xs:schema targetNamespace="http://tempuri.org/ConfigScheme.xsd"
    elementFormDefault="qualified"
    xmlns="http://tempuri.org/ConfigScheme.xsd"
    xmlns:mstns="http://tempuri.org/ConfigScheme.xsd"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
>

  <xs:element name="Config">
    <xs:complexType>
      <xs:sequence minOccurs="1" maxOccurs="1">
        <xs:element name="SourceDirectories" minOccurs="1" maxOccurs="1">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="Directory" maxOccurs="unbounded" minOccurs="1">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element type="xs:string" name="Path"/>
                    <xs:element type="xs:boolean" name="IncludeSubdirectories" />
                    <xs:element name="TargetDirectories">
                      <xs:complexType>
                        <xs:sequence>
                          <xs:element name="Directory" maxOccurs="unbounded" minOccurs="1">
                            <xs:complexType>
                              <xs:sequence>
                                <xs:element type="xs:string" name="Path"/>
                              </xs:sequence>
                              <xs:attribute type="xs:string" name="type" use="required"/>
                              <xs:attribute type="xs:string" name="ip" use="optional"/>
                              <xs:attribute type="xs:short" name="port" use="optional"/>
                            </xs:complexType>
                          </xs:element>
                        </xs:sequence>
                      </xs:complexType>
                    </xs:element>
                    <xs:element name="ExceptionDirectories">
                      <xs:complexType>
                        <xs:sequence>
                          <xs:element name="Directory">
                            <xs:complexType>
                              <xs:sequence>
                                <xs:element type="xs:string" name="Path"/>
                              </xs:sequence>
                              <xs:attribute type="xs:string" name="type" use="required"/>
                              <xs:attribute type="xs:string" name="ip" use="optional"/>
                              <xs:attribute type="xs:short" name="port" use="optional"/>
                            </xs:complexType>
                          </xs:element>
                        </xs:sequence>
                      </xs:complexType>
                    </xs:element>
                  </xs:sequence>
                  <xs:attribute type="xs:string" name="type" use="required"/>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>

        <!-- Activate parallel Synchronisation-->
        <xs:element name="ParallelSync" type="xs:boolean" />
        <!-- Default size of a log file -->
        <xs:element name="LogFileSize" type="xs:long" />
        <!-- Sync files with the specified file size per block -->
        <xs:element name="FileSize" type="xs:long" />
        <xs:element name="BlockSize" type="xs:long" />
      </xs:sequence>
    </xs:complexType>
  </xs:element>

</xs:schema>
