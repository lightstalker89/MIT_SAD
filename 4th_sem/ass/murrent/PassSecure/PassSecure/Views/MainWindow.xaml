<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:securityControls="clr-namespace:SecurityControls;assembly=SecurityControls"
        xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2" x:Class="PassSecure.Views.MainWindow"
        Title="Pass Secure" Height="402.358" Width="545.058" WindowStyle="ToolWindow">
	<Grid >
		<Grid.Background>
			<ImageBrush/>
		</Grid.Background>
		<Menu Height="20" Margin="0,0,0.399,0" VerticalAlignment="Top" Style="{DynamicResource MenuStyle}">
			<MenuItem Header="File" Style="{DynamicResource MenuItemStyle}">
				<MenuItem Header="Import" Click="ImportDataClick" Style="{DynamicResource MenuItemStyle}"/>
				<MenuItem Header="Export" Click="ExportDataClick" Style="{DynamicResource MenuItemStyle}"/>
				<Separator/>
				<MenuItem Header="Exit" Click="ExitClick" Style="{DynamicResource MenuItemStyle}"/>
			</MenuItem>
			<MenuItem Header="Mode" Style="{DynamicResource MenuItemStyle}">
				<MenuItem x:Name="MenuItemModeTrain" Header="Training" IsCheckable="True" IsChecked="false" Checked="MenuItemModeTrainChecked" Unchecked="MenuItemModeTrainUnchecked"  Style="{DynamicResource MenuItemStyle}"/>
				<MenuItem x:Name="MenuItemModeNormal" Header="Normal" IsCheckable="True" IsChecked="true" Checked="MenuItemModeNormalChecked" Unchecked="MenuItemModeNormalUnchecked"  Style="{DynamicResource MenuItemStyle}"/>
			</MenuItem>
			<MenuItem Header="View" Style="{DynamicResource MenuItemStyle}">
				<MenuItem Header="Data" Click="DataClick" Style="{DynamicResource MenuItemStyle}"/>
			</MenuItem>
			<MenuItem Header="Help" Style="{DynamicResource MenuItemStyle}" />
		</Menu>
		<Grid x:Name="ControlGrid">
			<Grid x:Name="Background" Margin="0,20,-0.624,-0.988">
				<Grid.Background>
					<ImageBrush ImageSource="/PassSecure;component/Media/PasswordBiomet1.jpg"/>
				</Grid.Background>
				<Image x:Name="Accepted" Visibility="Collapsed" Margin="178,117,194,36" Source="/PassSecure;component/Media/boss.jpg"/>
				<Image x:Name="NotAccepted" Visibility="Collapsed" Margin="178,117,194,36" Source="/PassSecure;component/Media/you-shall-not-pass-79979-530-805.jpg"/>
			</Grid>
			<Label Content="Password: " Margin="21,76,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="66" Foreground="White"/>
			<PasswordBox x:Name="Password" Height="20" Margin="26,97,26,0" VerticalAlignment="Top" TabIndex="0" Background="#66FFFFFF" Foreground="#FF00F4FF"/>
			<Button x:Name="LoginButton" Content="Login" Margin="0,122,25.618,0" VerticalAlignment="Top" Click="LoginButtonClick" HorizontalAlignment="Right" Width="78" Background="#66FFFFFF" Foreground="#FF00F4FF"  AllowDrop="True" Style="{DynamicResource ButtonStyle}"/>
			<ComboBox x:Name="UserNames" Margin="26,54,61.618,0" VerticalAlignment="Top" SelectedIndex="0" SelectionChanged="UserNamesSelectionChanged" Style="{DynamicResource ComboBoxStyle}"  Foreground="#FF00F4FF" />
			<Label Content="Username:" Margin="21,33,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="66" Foreground="White"/>
			<securityControls:PersonalQuestionControl x:Name="PersonalQuestionControl" Margin="26,165,28.318,0" Height="94" VerticalAlignment="Top" Visibility="Hidden"/>
			<Button x:Name="AddUserButton" Content="+" Margin="0,54,25.618,0" VerticalAlignment="Top" Click="AddUserButtonClick" HorizontalAlignment="Right" Width="34" Height="22" Background="#66FFFFFF" Foreground="#FF00F4FF"  Style="{DynamicResource ButtonStyle}"/>
			<StatusBar Height="23" Margin="0,0,-0.382,-0.844" VerticalAlignment="Bottom" Background="#33FFFFFF">
				<TextBlock Text="Mode:" FontWeight="Bold" Foreground="#FF00F4FF"/>
				<TextBlock x:Name="ModeText" Text="Normal" Foreground="#FF00F4FF"/>
				<TextBlock x:Name="Status" Margin="40,0,0,0" Foreground="#FF902D0D" FontWeight="Bold" Background="#33FFFFFF" Padding="1"/>
			</StatusBar>
		</Grid>
	</Grid>
</Window>
