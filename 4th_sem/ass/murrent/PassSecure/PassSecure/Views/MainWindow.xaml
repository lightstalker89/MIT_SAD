<Window x:Class="PassSecure.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:securityControls="clr-namespace:SecurityControls;assembly=SecurityControls"
        Title="Pass Secure" Height="373.503" Width="527.301">
    <Grid>
        <Menu Height="20" Margin="0,0,0.399,0" VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="Import" Click="ImportDataClick"/>
                <MenuItem Header="Export" Click="ExportDataClick"/>
                <Separator></Separator>
                <MenuItem Header="Exit" Click="ExitClick"/>
            </MenuItem>
            <MenuItem Header="Mode">
                <MenuItem Name="MenuItemModeTrain" Header="Training" IsCheckable="True" IsChecked="false" Checked="MenuItemModeTrainChecked" Unchecked="MenuItemModeTrainUnchecked" />
                <MenuItem Name="MenuItemModeNormal" Header="Normal" IsCheckable="True" IsChecked="true" Checked="MenuItemModeNormalChecked" Unchecked="MenuItemModeNormalUnchecked" />
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Data" Click="DataClick"/>
            </MenuItem>
            <MenuItem Header="Help" />
        </Menu>
        <Grid x:Name="ControlGrid">
            <Label Content="Password: " Margin="20,76,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="66"/>
            <PasswordBox Name="Password" Height="20" Margin="26,97,26,0" VerticalAlignment="Top" TabIndex="0"/>
            <Button Name="LoginButton" Content="Login" Margin="0,122,25.618,0" VerticalAlignment="Top" Click="LoginButtonClick" HorizontalAlignment="Right" Width="78"/>
            <ComboBox Name="UserNames" Margin="26,54,61.618,0" VerticalAlignment="Top" SelectedIndex="0" SelectionChanged="UserNamesSelectionChanged"/>
            <Label Content="Username:" Margin="20,33,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="66"/>
            <securityControls:PersonalQuestionControl Name="PersonalQuestionControl" Margin="26,165,28.318,0" Height="94" VerticalAlignment="Top" Visibility="Hidden"/>

            <StatusBar Height="20" Margin="0,0,0.318,-0.347" VerticalAlignment="Bottom">
                <TextBlock Text="Mode:" FontWeight="Bold" />
                <TextBlock Name="ModeText" Text="Normal" />
                <TextBlock Name="Status" Margin="40,0,0,0"/>
            </StatusBar>
            <Button x:Name="AddUserButton" Content="+" Margin="0,54,25.618,0" VerticalAlignment="Top" Click="AddUserButtonClick" HorizontalAlignment="Right" Width="34" Height="22"/>
        </Grid>
    </Grid>
</Window>
