        <Grid x:Name="ControlGrid">
            <Grid x:Name="BackgroundGrid" Margin="0,0,-1,-1">
                <Grid.Background>
                    <ImageBrush ImageSource="/PassSecure;component/Media/PasswordBiomet1.jpg" Stretch="UniformToFill"/>
                </Grid.Background>
                <Image x:Name="Accepted" Visibility="Collapsed" Margin="178,117,194,36" Source="/PassSecure;component/Media/boss.jpg"/>
                <Image x:Name="NotAccepted" Visibility="Collapsed" Margin="178,117,194,36" Source="/PassSecure;component/Media/you-shall-not-pass-79979-530-805.jpg"/>
            </Grid>
            <Rectangle Fill="#99000000" Margin="20,32,20,0" Height="124" VerticalAlignment="Top">
                <Rectangle.Effect>
                    <DropShadowEffect BlurRadius="53" Color="#FFDEDEDE" Direction="200" RenderingBias="Quality" ShadowDepth="10"/>
                </Rectangle.Effect>
            </Rectangle>
            <Grid x:Name="ContentGrid">
                <Label Content="Password: " Margin="21,76,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="66" Foreground="White"/>
                <PasswordBox x:Name="Password" Height="20" Margin="26,97,26,0" VerticalAlignment="Top" TabIndex="0" Background="#66FFFFFF" Foreground="#FF00F4FF"/>
                <Button x:Name="LoginButton" Content="Login" Margin="0,122,25.618,0" VerticalAlignment="Top" Click="LoginButtonClick" HorizontalAlignment="Right" Width="78" Background="#66FFFFFF" Foreground="#FF00F4FF"  AllowDrop="True" Style="{DynamicResource ButtonStyle}"/>
                <ComboBox x:Name="UserNames" Margin="26,54,61.618,0" VerticalAlignment="Top" SelectedIndex="0" SelectionChanged="UserNamesSelectionChanged" Style="{DynamicResource ComboBoxStyle}"  Foreground="#FF253446" />
                <Label Content="Username:" Margin="21,33,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="66" Foreground="White"/>
                <securityControls:PersonalQuestionControl x:Name="PersonalQuestionControl" Margin="26,165,28.318,0" Height="94" VerticalAlignment="Top" Visibility="Hidden"/>
                <Button x:Name="AddUserButton" Content="+" Margin="0,54,25.618,0" VerticalAlignment="Top" Click="AddUserButtonClick" HorizontalAlignment="Right" Width="34" Height="22" Background="#66FFFFFF" Foreground="#FF00F4FF"  Style="{DynamicResource ButtonStyle}"/>
            </Grid>
            <StatusBar Height="23" Margin="0,0,-0.382,-0.844" VerticalAlignment="Bottom" Background="#33FFFFFF">
                <TextBlock Text="Mode:" FontWeight="Bold" Foreground="#FF00F4FF"/>
                <TextBlock x:Name="ModeText" Text="Normal" Foreground="#FF00F4FF"/>
                <TextBlock x:Name="Status" Margin="40,0,0,0" Foreground="#FF902D0D" Text="" FontWeight="Bold" Background="#33FFFFFF" Padding="1">
                </TextBlock>
            </StatusBar>
            <Rectangle Fill="#99000000" Margin="20,179,20,0" Height="124" VerticalAlignment="Top">
                <Rectangle.Effect>
                    <DropShadowEffect BlurRadius="53" Color="#FFDEDEDE" Direction="200" RenderingBias="Quality" ShadowDepth="10"/>
                </Rectangle.Effect>
            </Rectangle>
            <Grid  Margin="20,179,20,69">
                <Label Content="Mode:" Foreground="White" Margin="6,7,0,0" Height="27" VerticalAlignment="Top" HorizontalAlignment="Left" Width="47"/>
                <ComboBox x:Name="ModeComboBox" Height="20" Margin="51,10,0,0" VerticalAlignment="Top"  Style="{DynamicResource ComboBoxStyle}" Foreground="#FF253446" HorizontalAlignment="Left" Width="172" ToolTip="Press CTRL+T to switch to training mode and CTRL+n to switch to normal mode" SelectionChanged="ModeComboBoxSelectionChanged">
                    <ComboBox.Items>
                        <ComboBoxItem Content="Normal (CTRL+N)"></ComboBoxItem>
                        <ComboBoxItem Content="Training (CTRL+T)"></ComboBoxItem>
                    </ComboBox.Items>
                </ComboBox>
            </Grid>
        </Grid>
    </Grid>
</Window>
