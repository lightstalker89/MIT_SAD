                <MenuItem Header="Export" Click="ExportDataClick" Style="{DynamicResource MenuItemStyle}"/>
                <Separator/>
                <MenuItem Header="Exit" Click="ExitClick" Style="{DynamicResource MenuItemStyle}"/>
            </MenuItem>
            <MenuItem Header="Mode" Style="{DynamicResource MenuItemStyle}">
                <MenuItem x:Name="MenuItemModeTrain" Header="Training" IsCheckable="True" IsChecked="false" InputGestureText="CTRL+T" Checked="MenuItemModeTrainChecked" Unchecked="MenuItemModeTrainUnchecked"  Style="{DynamicResource MenuItemStyle}" Command="{StaticResource TrainingModeCommand}"/>
                <MenuItem x:Name="MenuItemModeNormal" Header="Normal" IsCheckable="True" IsChecked="true" InputGestureText="CTRL+N" Checked="MenuItemModeNormalChecked" Unchecked="MenuItemModeNormalUnchecked"  Style="{DynamicResource MenuItemStyle}" Command="{StaticResource NormalModeCommand}"/>
            </MenuItem>
            <MenuItem Header="View" Style="{DynamicResource MenuItemStyle}">
                <MenuItem Header="Data" Click="DataClick" Style="{DynamicResource MenuItemStyle}"/>
            </MenuItem>
