<Window x:Class="PassSecure.Views.DataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Data" Height="333.295" Width="514.197">
    <Grid>
        <ListView Name="DataListView" Margin="0,0,-0.145,34.202" BorderBrush="{x:Null}" HorizontalContentAlignment="Center">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Username" Width="180" DisplayMemberBinding="{ Binding UserName}"/>
                    <GridViewColumn Header="Password" Width="180" DisplayMemberBinding="{ Binding Password}" />
                    <GridViewColumn Header="Training Entries" Width="100" DisplayMemberBinding="{Binding Trainings.Count}"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Ok" HorizontalAlignment="Right" Margin="0,0,8.855,7.202" VerticalAlignment="Bottom" Width="75" Click="OkClick"/>

    </Grid>
</Window>
