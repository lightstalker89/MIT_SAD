<UserControl x:Class="CaptchaControl.UserControlCaptcha"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
    <Grid>
            <StackPanel Orientation="Vertical">
                <TextBlock Name="CaptchaTextBlock" Text="" Height="59" Margin="0,0,0.208,0"></TextBlock>
                <TextBlock Name="EnterCaptchaTextBlock" Text="Please enter the text you see above" TextAlignment="Center" Margin="0,10,0,0"></TextBlock>
                <TextBox Name="EnteredCaptcha" Margin="0,10,0,0"></TextBox>
                <Button Name="SubmitButton" Content="Submit" Margin="60,10,60,0" Click="SubmitButtonClick"></Button>
            </StackPanel>
    </Grid>
</UserControl>
